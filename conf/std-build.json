{
    "heckle": {
        "args": [ "source", "target" ],
        "action": "npx --no-install heckle build {source} {target}"
    },
    "webpack": {
        "args": [ "source", "target" ],
        "action": "npx --no-install webpack --config {source}/webpack.config.js --env.SOURCE={source} --env.TARGET={target}"
    },
    "pwa-build": {
        "args": [ "source" ],
        "actions": [
            "npx make-pwa-images {source} {source}",
            "npx make-sw {source} {source}",
            "npx make-html-header {source} {source} -o _includes/locomote-header.html",
            "npx make-web-manifest {source} {source}"
        ]
    },
    "build": {
        "args": [ "source", "target" ],
        "actions": [
            "heckle {source} {target}",
            "webpack {source} {target}"
        ]
    },
    "build-from-git": {
        "args": [ "origin", "source", "target" ],
        "actions": [
            "git-clone {origin} {source}",
            "git-clone {origin} {target}",
            "npm-install {source} {origin}",
            "build {source} {target}",
            "write-build-record {source} {target}",
            "git-push {target}"
        ]
    },
    "cli:pwa-build": {
        "args": [ "source" ],
        "vars": {
            "source": "."
        },
        "action": "pwa-build {source}"
    },
    "cli:serve": {
        "args": [ "source", "target" ],
        "vars": {
            "source": ".",
            "target": "_site"
        },
        "action": "start-server {source} {target}"
    },
    "cli:build": {
        "args": [ "origin", "source", "target" ],
        "vars": {
            "origin": ".",
            "source": "master",
            "target": "test"
        },
        "actions": [
            "mktemp",
            "build-from-git {origin} {source} {target}",
            "rmdir ."
        ]
    }
}

